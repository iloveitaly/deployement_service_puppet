upstream unicorn_<%= name %>_secure {
  server unix:/data/<%= name %>/shared/sockets/unicorn.sock fail_timeout=0;
  <%- if loadbalancer -%>
  <%- app_server_ips.each do |app_server_ip| -%>
    <%- next if app_server_ip == server_ip -%>
  server <%= app_server_ip %>:5000;
  <%- end -%>
  <%- end -%>
}

server {
  listen 443;
  client_max_body_size 4G;

  ssl on;
  ssl_certificate         /etc/ssl/<%= name %>.crt;
  ssl_certificate_key     /etc/ssl/<%= name %>.key;
  ssl_protocols SSLv3 TLSv1;
  ssl_ciphers RC4:HIGH:!aNULL:!MD5;
  ssl_prefer_server_ciphers on;

  root /data/<%= name %>/current/public;

  location / {
    proxy_set_header X_FORWARDED_PROTO https;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_set_header  X-Url-Scheme $scheme;
    proxy_max_temp_file_size 0;
    proxy_redirect off;

    proxy_set_header X-Sendfile-Type  X-Accel-Redirect;
    proxy_set_header X-Accel-Mapping  /data/<%= app_name %>/shared/uploaded-files/digitals/=/digitals/;

    if (!-f $request_filename) {
      proxy_pass http://unicorn_<%= name %>_secure;
      break;
    }
  }

  location ~* ^/assets {
    expires max;
    add_header Cache-Control public;
    break;
  }

  location /digitals/ {
    internal;
    root /data/<%= app_name %>/shared/uploaded-files/;
  }

  set $maintenance 0;

  if (-f /home/<%= app_name %>/maintenance) {
    set $maintenance 1;
  }

  if ($request_uri ~* ^/assets) {
    set $maintenance 0;
  }

  if ($maintenance) {
    return 503;
  }

  error_page 503 @maintenance;

  location @maintenance {
    if ($uri !~ ^/assets/) {
      rewrite ^(.*)$ /503.html break;
    }
    return 200;
  }

  error_page 500 502 504 /500.html;
  location = /500.html {
    root /data/<%= name %>/current/public;
  }
}
