upstream unicorn_<%= app_name %> {
  server unix:/data/<%= app_name %>/shared/sockets/unicorn.sock fail_timeout=0;
  <%- if loadbalancer -%>
  <%- app_server_ips.each do |app_server_ip| -%>
    <%- next if app_server_ip == server_ip -%>
  server <%= app_server_ip %>:5000;
  <%- end -%>
  <%- end -%>
}

server {
  listen 80;
  client_max_body_size 4G;
  server_name _;

  keepalive_timeout 5;

  root /data/<%= app_name %>/current/public;

  location / {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    if (!-f $request_filename) {
      proxy_pass http://unicorn_<%= app_name %>;
      break;
    }
  }

  location ~* ^/assets {
    expires max;
    add_header Cache-Control public;
    break;
  }

  set $maintenance 0;

  if (-f /home/<%= app_name %>/maintenance) {
    set $maintenance 1;
  }

  if ($request_uri ~* ^/assets) {
    set $maintenance 0;
  }

  if ($maintenance) {
    return 503;
  }

  error_page 503 @maintenance;

  location @maintenance {
    if ($uri !~ ^/assets/) {
      rewrite ^(.*)$ /503.html break;
    }
    return 200;
  }

  error_page 500 502 504 /500.html;
  location = /500.html {
    root /data/<%= app_name %>/current/public;
  }
}
